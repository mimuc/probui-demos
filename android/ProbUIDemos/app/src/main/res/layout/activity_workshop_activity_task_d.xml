<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:probuidemos="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.lmu.ifi.medien.probuidemos.developer_workshop.tasks.taskD.WorkshopActivityTaskD">

    <view
        android:id="@+id/probUIContainer"
        class="de.lmu.ifi.medien.probuidemos.workshop.tasks.taskD.MySwatchContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/background_dark"
        android:clipChildren="false">

        <view
            android:id="@+id/swatch1"
            class="de.lmu.ifi.medien.probuidemos.workshop.tasks.taskD.MyProbUISwatch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            probuidemos:swatch_blue="0"
            probuidemos:swatch_green="0"
            probuidemos:swatch_red="255" />

        <view
            android:id="@+id/swatch2"
            class="de.lmu.ifi.medien.probuidemos.workshop.tasks.taskD.MyProbUISwatch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:background="@null"
            probuidemos:swatch_blue="0"
            probuidemos:swatch_green="255"
            probuidemos:swatch_red="0" />

        <view
            android:id="@+id/swatch3"
            class="de.lmu.ifi.medien.probuidemos.workshop.tasks.taskD.MyProbUISwatch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/swatch1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:background="@null"
            probuidemos:swatch_blue="255"
            probuidemos:swatch_green="0"
            probuidemos:swatch_red="0" />

    </view>
</RelativeLayout>
