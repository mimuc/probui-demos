<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_workshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/workshop_task_spinner"
        android:onClick="launchWorkshop"
        android:text="Start" />

    <Spinner
        android:id="@+id/workshop_task_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />


    <Button
        android:id="@+id/button_menu_demo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_workshop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_workshop"
        android:layout_below="@+id/button_workshop"
        android:onClick="launchMenuDemo"
        android:text="Menu Button Demo" />

    <Button
        android:id="@+id/button_list_demo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_menu_demo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_menu_demo"
        android:layout_below="@+id/button_menu_demo"
        android:onClick="launchListDemo"
        android:text="Menu List Demo" />


    <Button
        android:id="@+id/button_image_viewer_demo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_list_demo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_list_demo"
        android:layout_below="@+id/button_list_demo"
        android:onClick="launchImageViewerDemo"
        android:text="Image Viewer Demo" />


    <Button
        android:id="@+id/button_sliding_widgets_demo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_image_viewer_demo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_image_viewer_demo"
        android:layout_below="@+id/button_image_viewer_demo"
        android:onClick="launchSlidingWidgetsDemo"
        android:text="Sliding Widgets Demo" />


    <Button
        android:id="@+id/button_bezel_demo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_sliding_widgets_demo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_sliding_widgets_demo"
        android:layout_below="@+id/button_sliding_widgets_demo"
        android:onClick="launchBezelDemo"
        android:text="Bezel Demo" />


    <Button
        android:id="@+id/button_rubbing_demo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_bezel_demo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_bezel_demo"
        android:layout_below="@+id/button_bezel_demo"
        android:onClick="launchRubbingDemo"
        android:text="Rubbing Demo" />


    <Button
        android:id="@+id/button_play_demo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_rubbing_demo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_rubbing_demo"
        android:layout_below="@+id/button_rubbing_demo"
        android:onClick="launchPlayButtonDemo"
        android:text="Play Button Demo" />

    <Button
        android:id="@+id/button_slider_demo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/button_play_demo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_play_demo"
        android:layout_below="@+id/button_play_demo"
        android:onClick="launchSliderDemo"
        android:text="Slider Demo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:id="@+id/textView"
        android:layout_gravity="right"
        android:gravity="bottom|right"
        android:onClick="launchInfoScreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_slider_demo"
        android:layout_alignEnd="@+id/button_slider_demo" />

</RelativeLayout>
