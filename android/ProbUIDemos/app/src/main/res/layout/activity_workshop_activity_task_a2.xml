<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.lmu.ifi.medien.probuidemos.developer_workshop.tasks.taskA2.WorkshopActivityTaskA2">


    <view
        android:id="@+id/probUIContainer"
        class="de.lmu.ifi.medien.probui.gui.ProbUIContainerRelative"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="What is the first letter of the alphabet?" />


            <view
                android:id="@+id/buttonA"
                class="de.lmu.ifi.medien.probuidemos.workshop.tasks.taskA2.MyQuizButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickButton"
                android:textSize="32dp"
                android:text="A" />

            <view
                android:id="@+id/buttonB"
                class="de.lmu.ifi.medien.probuidemos.workshop.tasks.taskA2.MyQuizButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickButton"
                android:textSize="32dp"
                android:text="B" />

            <view
                android:id="@+id/buttonC"
                class="de.lmu.ifi.medien.probuidemos.workshop.tasks.taskA2.MyQuizButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickButton"
                android:textSize="32dp"
                android:text="C" />

            <view
                android:id="@+id/buttonD"
                class="de.lmu.ifi.medien.probuidemos.workshop.tasks.taskA2.MyQuizButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickButton"
                android:textSize="32dp"
                android:text="D" />

        </LinearLayout>

    </view>

</RelativeLayout>
